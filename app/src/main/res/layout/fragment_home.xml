<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeFragment">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5sp"
        android:fontFamily="@font/kanit_medium"
        android:text="Username"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:translationX="-90sp"
        android:translationY="-80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gradHome"
        app:layout_constraintStart_toStartOf="@+id/gradHome"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="0sp"
        android:layout_height="40sp"
        android:layout_margin="20sp"
        android:background="@color/white"
        android:elevation="5sp"
        android:ems="10"
        android:fontFamily="@font/kanit_light_italic"
        android:hint="Enter username"
        android:inputType="text"
        android:padding="10sp"
        android:translationY="-50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gradHome"
        app:layout_constraintStart_toStartOf="@+id/gradHome"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5sp"
        android:fontFamily="@font/kanit_medium"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:translationX="-90sp"
        android:translationY="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gradHome"
        app:layout_constraintStart_toStartOf="@+id/gradHome"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="0sp"
        android:layout_height="40sp"
        android:layout_margin="20sp"
        android:background="@color/white"
        android:elevation="5sp"
        android:ems="10"
        android:fontFamily="@font/kanit_light_italic"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="10sp"
        android:translationY="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gradHome"
        app:layout_constraintStart_toStartOf="@+id/gradHome"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/titleWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/kanit_medium"
        android:text="Welcome"
        android:textColor="#F26419"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gradHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/OxyGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="@font/kanit_light_italic"
        android:gravity="center"
        android:text="OxyGO"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contextClickable="true"
        android:elevation="5dp"
        android:fontFamily="@font/kanit"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:translationX="10sp"
        android:translationY="-140sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="66dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/gradHome"
        style="@style/CardView."
        android:layout_width="297dp"
        android:layout_height="285dp"
        android:layout_marginTop="90dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/topGradHome"
        style="@style/CardView."
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toTopOf="@+id/titleWelcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnToSignUp"
        android:layout_width="170sp"
        android:layout_height="wrap_content"
        android:background="#F26419"
        android:fontFamily="@font/kanit_medium"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnLogin"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gradHome"
        app:layout_constraintVertical_bias="0.062" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:background="#000000"
        android:fontFamily="@font/kanit_medium"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gradHome"
        app:layout_constraintVertical_bias="0.057" />


</androidx.constraintlayout.widget.ConstraintLayout>