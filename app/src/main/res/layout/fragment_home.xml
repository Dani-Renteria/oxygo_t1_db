<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeFragment">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5sp"
        android:fontFamily="@font/kanit_medium"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:translationX="-110sp"
        android:translationY="-100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gradHome"
        app:layout_constraintStart_toStartOf="@+id/gradHome"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="0sp"
        android:layout_height="40sp"
        android:layout_margin="20sp"
        android:background="@color/white"
        android:elevation="5sp"
        android:ems="10"
        android:fontFamily="@font/kanit_light_italic"
        android:hint="Enter your email"
        android:textColorHint="@color/black"
        android:inputType="textEmailAddress"
        android:padding="10sp"
        android:translationY="-70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gradHome"
        app:layout_constraintStart_toStartOf="@+id/gradHome"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5sp"
        android:fontFamily="@font/kanit_medium"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:translationX="-110sp"
        android:translationY="-20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gradHome"
        app:layout_constraintStart_toStartOf="@+id/gradHome"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="0sp"
        android:layout_height="40sp"
        android:layout_margin="20sp"
        android:background="@color/white"
        android:elevation="5sp"
        android:ems="10"
        android:fontFamily="@font/kanit_light_italic"
        android:hint="Enter Password"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        android:padding="10sp"
        android:translationY="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gradHome"
        app:layout_constraintStart_toStartOf="@+id/gradHome"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/titleWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/kanit_medium"
        android:text="Welcome"
        android:textColor="#F26419"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gradHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/OxyGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="@font/kanit_light_italic"
        android:gravity="center"
        android:text="OxyGO"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="361dp"
        android:layout_height="40dp"
        android:background="#000000"
        android:elevation="6dp"
        android:fontFamily="@font/kanit_medium"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:translationY="300sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78" />

    <androidx.cardview.widget.CardView
        android:id="@+id/gradHome"
        style="@style/CardView."
        android:layout_width="364dp"
        android:layout_height="321dp"
        android:layout_marginTop="90dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/topGradHome"
        style="@style/CardView."
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toTopOf="@+id/titleWelcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnToSignUp"
        android:layout_width="130dp"
        android:layout_height="33dp"
        android:background="#F26419"
        android:fontFamily="@font/kanit_medium"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:translationX="145sp"
        android:translationY="200sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gradHome"
        app:layout_constraintHorizontal_bias="0.282"
        app:layout_constraintStart_toStartOf="@+id/gradHome"
        app:layout_constraintTop_toTopOf="@+id/OxyGo"
        app:layout_constraintVertical_bias="0.345" />

    <TextView
        android:id="@+id/notAMemberTxt"
        android:layout_width="176dp"
        android:layout_height="24dp"
        android:fontFamily="@font/kanit_medium"
        android:text="Not a member? Sign up"
        android:textAllCaps="false"
        android:textColor="#F26419"
        android:textSize="15sp"
        android:translationX="-70sp"
        android:translationY="90sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="@font/kanit_medium"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:translationX="-135sp"
        android:translationY="-40sp"
        app:layout_constraintBottom_toBottomOf="@+id/gradHome"
        app:layout_constraintEnd_toEndOf="@+id/gradHome"
        app:layout_constraintStart_toStartOf="@+id/gradHome"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>