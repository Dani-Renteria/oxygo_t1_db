<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:padding="30dp"
    tools:context=".SignupFragment">


    <Button
        android:id="@+id/signUp"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#F26419"
        android:elevation="5dp"
        android:fontFamily="@font/kanit"
        android:shadowRadius="10"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/enterPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/enterEmail"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/inner_shadow"
        android:ems="10"
        android:fontFamily="@font/kanit"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10sp"
        android:textColorHint="#F26419"
        app:layout_constraintBottom_toTopOf="@+id/enterOxyId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/enterOxyId"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/inner_shadow"
        android:ems="10"
        android:fontFamily="@font/kanit"
        android:hint="Enter your OXY ID"
        android:inputType="text"
        android:paddingLeft="10sp"
        android:textColorHint="#F26419"
        app:layout_constraintBottom_toTopOf="@+id/enterPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/kanit_medium"
        android:text="Join OxyGO"
        android:textAllCaps="false"
        android:textColor="#F26419"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterPassword"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:background="@drawable/inner_shadow"
        android:ems="10"
        android:fontFamily="@font/kanit"
        android:hint="Create a Password"
        android:inputType="textPassword"
        android:paddingLeft="10sp"
        android:textColor="#F26419"
        android:textColorHint="#F26419"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="426dp" />

</androidx.constraintlayout.widget.ConstraintLayout>