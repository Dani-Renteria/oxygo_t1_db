<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:padding="30dp"
    tools:context=".serviceForm">

    <Button
        android:id="@+id/CreateServiceBtn"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#F26419"
        android:elevation="5dp"
        android:fontFamily="@font/kanit"
        android:shadowRadius="10"
        android:text="Create!"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ServiceTitle"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/inner_shadow"
        android:ems="10"
        android:fontFamily="@font/kanit"
        android:hint="Enter your Service Name/Title"
        android:inputType="textCapWords"
        android:paddingLeft="10sp"
        android:textColorHint="#F26419"
        app:layout_constraintTop_toBottomOf="@+id/ServiceFormSign"
        app:layout_constraintBottom_toTopOf="@+id/enterServiceDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/enterServiceDetails"
        android:layout_width="350dp"
        android:layout_height="117dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/inner_shadow"
        android:ems="10"
        android:fontFamily="@font/kanit"
        android:hint="Enter your service details/ description"
        android:inputType="text"
        android:paddingLeft="10sp"
        android:textColorHint="#F26419"
        android:translationY="50sp"
        app:layout_constraintBottom_toTopOf="@+id/enterServicePrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ServiceTitle" />

    <TextView
        android:id="@+id/ServiceFormSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/kanit_medium"
        android:text="OxyGO Service Form"
        android:textAllCaps="false"
        android:textColor="#F26419"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterServicePrice"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/inner_shadow"
        android:ems="10"
        android:fontFamily="@font/kanit"
        android:hint="Set a Price"
        android:inputType="numberDecimal"
        android:paddingLeft="10sp"
        android:textColor="#F26419"
        android:textColorHint="#F26419"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterServiceDetails"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/enterServiceLocation"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/inner_shadow"
        android:ems="10"
        android:fontFamily="@font/kanit"
        android:hint="Service Location"
        android:inputType="text"
        android:paddingLeft="10sp"
        android:textColor="#F26419"
        android:textColorHint="#F26419"
        app:layout_constraintBottom_toTopOf="@+id/CreateServiceBtn"
        app:layout_constraintEnd_toEndOf="@+id/CreateServiceBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterServicePrice"
        app:layout_constraintVertical_bias="0.06" />


</androidx.constraintlayout.widget.ConstraintLayout>